<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://jakarta.ee/xml/ns/jakartaee
                             http://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <display-name>GreenLoop</display-name>

    <!-- ====== SERVLET MAPPINGS ====== -->

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controllers.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controllers.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VendorProductServlet</servlet-name>
        <servlet-class>controllers.VendorProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VendorProductServlet</servlet-name>
        <url-pattern>/vendor/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CustomerCartServlet</servlet-name>
        <servlet-class>controllers.CustomerCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerCartServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminApprovalServlet</servlet-name>
        <servlet-class>controllers.AdminApprovalServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminApprovalServlet</servlet-name>
        <url-pattern>/admin/approve</url-pattern>
    </servlet-mapping>

    <!-- ====== WELCOME FILE ====== -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <!-- ====== SESSION CONFIG ====== -->
    <session-config>
        <session-timeout>30</session-timeout> <!-- in minutes -->
    </session-config>

</web-app>
